<div class="container">
        <form class="search-form" id="search-form">
            <input class="input" type="text" name="query" autocomplete="off" placeholder="Search images..." />
            <button type="submit" class="btn-search button">Search</button>
        </form>
    
        <div class="gallery-list">
            <ul class="gallery list card">
                <!-- Список <li> с карточками изображений -->
            </ul>
        </div>
    
        <button type="button" class="load-more-btn button">
            <span class="label">Load more</span>
        </button>
        <div class="loader is-hidden"></div>
</div>

<div class="lightbox js-lightbox">
    <div class="lightbox__overlay"></div>

    <div class="lightbox__content">
      <img class="lightbox__image" src="" alt="" />
    </div>

    <button
      type="button"
      class="lightbox__button"
      data-action="close-lightbox"
    ></button>
    <div class="loader-in-lightbox is-hidden"></div>
</div>

